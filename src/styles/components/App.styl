.App {
  background-color: #000000
  color: #FFFFFF;
  display: flex
  flex-direction: column
  height: 100vh
  position: fixed
  overflow-x: none
  overflow-y: scroll
  width: 100vw

  // .App-main
  &-main {
    align-items: center
    display: flex
    flex-grow: 1
    justify-content: center
    padding: 1rem 
  }

  // .App-title
  &-title {
    text-align: center
  }
}